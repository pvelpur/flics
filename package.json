{
  "name": "flics",
  "version": "1.0.0",
  "engines": {
    "yarn": "1.22.10"
  },
  "description": "Application to share movie/TV show recommendations with your friends",
  "main": "index.js",
  "scripts": {
    "dev": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "build": "cd Front-end && yarn build",
    "install-client": "cd Front-end && yarn install",
    "heroku-postbuild": "npm run install-client && npm run build",
    "start": "node src/index.js",
    "client": "cd ../Front-end && yarn start"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^2.0.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.15",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "validator": "^13.1.17"
  }
}
